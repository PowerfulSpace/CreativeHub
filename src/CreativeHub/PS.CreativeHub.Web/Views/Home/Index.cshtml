@model ContactFormModel
@{
    ViewData["Title"] = "Creative Hub - Главная";
}

   
<div class="container my-5">
    <!-- Приветственный блок -->
    @await Html.PartialAsync("Index_Partial/_Welcome")
    
    <!-- Блок "Обо мне" -->
    @await Html.PartialAsync("Index_Partial/_AboutMe")

    <!-- Мои работы -->
    @await Html.PartialAsync("Index_Partial/_MyWorks")

    <!-- Отзывы клиентов -->
    @await Html.PartialAsync("Index_Partial/_Testimonials")

    <!-- Блог -->
    @await Html.PartialAsync("Index_Partial/_Blog")

    <!-- Свяжитесь со мной -->
    @await Html.PartialAsync("Index_Partial/_Contact", Model)

    <!-- Социальные сети -->
    <section class="text-center mb-5">
        <h2 class="fw-bold mb-4">Следите за мной</h2>
        <p class="text-muted">Присоединяйтесь к моим соцсетям и следите за новостями!</p>
        <div class="d-flex justify-content-center gap-4">
            <!-- Facebook -->
            <a href="#" class="text-decoration-none" target="_blank" aria-label="Facebook">
                <i class="fab fa-facebook fa-2x text-primary"></i>
            </a>
            <!-- Instagram -->
            <a href="#" class="text-decoration-none" target="_blank" aria-label="Instagram">
                <i class="fab fa-instagram fa-2x text-danger"></i>
            </a>
            <!-- Twitter -->
            <a href="#" class="text-decoration-none" target="_blank" aria-label="Twitter">
                <i class="fab fa-twitter fa-2x text-info"></i>
            </a>
            <!-- YouTube -->
            <a href="#" class="text-decoration-none" target="_blank" aria-label="YouTube">
                <i class="fab fa-youtube fa-2x text-danger"></i>
            </a>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@if (ViewBag.Anchor != null)
{
    <script>
        document.getElementById('@ViewBag.Anchor').scrollIntoView({ behavior: "smooth" });
    </script>
}
